{
	"info": {
		"_postman_id": "huma-volve-backend-v1",
		"name": "Huma-volve Backend API",
		"description": "Postman collection for Huma-volve Backend. \n\n**Setup:**\n1. set strictly the variable `base_url` to `http://localhost:8000/api` (or your accepted host).\n2. After login, set the `token` variable in your environment to the received Bearer token.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone\": \"01012345678\",\n    \"password\": \"password\",\n    \"remember_me\": \"on\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test Patient\",\n    \"email\": \"test_patient@example.com\",\n    \"phone\": \"01012345678\",\n    \"password\": \"password\",\n    \"password_confirmation\": \"password\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"register"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Doctors",
			"item": [
				{
					"name": "List Doctors",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/doctors?per_page=10",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"doctors"
							],
							"query": [
								{
									"key": "per_page",
									"value": "10"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Show Doctor",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/doctors/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"doctors",
								"1"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Availability",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/doctors/1/availability",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"doctors",
								"1",
								"availability"
							]
						}
					},
					"response": []
				},
				{
					"name": "Toggle Favorite",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/doctors/1/favorite",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"doctors",
								"1",
								"favorite"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api"
		},
		{
			"key": "token",
			"value": ""
		}
	]
}